<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
    <name>Hauts' Framework</name>
    <author>Hautarche</author>
    <packageId>Hautarche.HautsFramework</packageId>
    <supportedVersions>
		<li>1.5</li>
    </supportedVersions>
	<description>Install before any other "Hauts" mods, because it makes them work. Does not directly add content for the player to experience, but adds many many modding tools.

See the full description: https://docs.google.com/document/d/1JPPbfiRIpaFdsvDoyR8lXw8NIOJMn06b4gHt5069D2k/edit?usp=sharing

Patch notes: https://docs.google.com/document/d/1JwwP-Wg7vhIIwm1r2SuI265j90Z1qy5pLsSEL5K80BI/edit?usp=sharing
    </description>
	<modIconPath IgnoreIfNoMatchingField="True">HautsLogo_Draft0</modIconPath>
	<modDependencies>
        <li>
            <packageId>brrainz.harmony</packageId>
            <displayName>Harmony</displayName>
            <downloadUrl>https://github.com/pardeike/HarmonyRimWorld/releases/latest</downloadUrl>
            <steamWorkshopUrl>https://steamcommunity.com/sharedfiles/filedetails/?id=2009463077</steamWorkshopUrl>
        </li>
		<li>
			<packageId>OskarPotocki.VanillaFactionsExpanded.Core</packageId>
			<displayName>Vanilla Expanded Framework</displayName>
			<steamWorkshopUrl>https://steamcommunity.com/workshop/filedetails/?id=2023507013</steamWorkshopUrl>
			<downloadUrl>https://github.com/Vanilla-Expanded/VanillaExpandedFramework</downloadUrl>
		</li>
	</modDependencies>
	<loadBefore>
		<li>lts.I</li>
	</loadBefore>
	<loadAfter>
		<li>OskarPotocki.VanillaFactionsExpanded.Core</li>
		<li>VanillaExpanded.VPsycastsE</li>
		<li>VanillaExpanded.VPE.Puppeteer</li>
		<li>OskarPotocki.VFE.Pirates</li>
		<li>kikohi.cybernetic</li>
		<li>MrKociak.BiotechMoreMechStuffMechUpgradePod</li>
	</loadAfter>
</ModMetaData>