<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[LC] Consolidated Traits</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--neat freak gets filth rate and filth avoidance chance-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TraitDef[defName="RCT_NeatFreak"]/degreeDatas/li/statOffsets</xpath>
					<value>
						<FilthRate>-0.2</FilthRate>
						<Hauts_TrackSize>-0.2</Hauts_TrackSize>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>