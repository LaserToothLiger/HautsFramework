<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>RPG Adventure Flavour Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!--stats-->
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusFromFood"]/label</xpath>
								<value>
									<label>mana gain from food</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusFromFood"]/description</xpath>
								<value>
									<description>The amount of mana gained per nutrition ingested.</description>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusGainOnKill"]/label</xpath>
								<value>
									<label>mana gain on kill</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusGainOnKill"]/description</xpath>
								<value>
									<description>The amount of mana gained on killing another being. The amount is multiplied by the victim's magic sensitivity.</description>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsycastFocusRefund"]/label</xpath>
								<value>
									<label>spell mana cost refund</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsycastFocusRefund"]/description</xpath>
								<value>
									<description>On casting a spell, regain this proportion of the mana spent.</description>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusRegenRate"]/label</xpath>
								<value>
									<label>mana regeneration</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_PsyfocusRegenRate"]/description</xpath>
								<value>
									<description>The amount of mana gained per day. It additively competes against mana decay rate.</description>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_SkipcastRangeFactor"]/label</xpath>
								<value>
									<label>conjuration spell range factor</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_SkipcastRangeFactor"]/description</xpath>
								<value>
									<description>A multiplier to the range of "conjuration" spells used by this character. While spells involving direct teleportation of objects are obviously conjuration, there are also several other spells that are considered conjurations, such as Flashstorm.</description>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_TierOnePsycastCostOffset"]/label</xpath>
								<value>
									<label>first-level spell cost offset</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/StatDef[defName = "Hauts_TierOnePsycastCostOffset"]/description</xpath>
								<value>
									<description>A flat offset to the amount of mana needed to cast 1st-level spells.</description>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>