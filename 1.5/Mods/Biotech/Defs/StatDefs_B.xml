<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<StatDef MayRequire="Ludeon.RimWorld.Biotech" ParentName="MechanitorStatBase">
		<defName>Hauts_MechCommandRange</defName>
		<label>mech command range</label>
		<description>The radius in which a mechanitor can issue specific orders to controlled mechanoids.</description>
		<defaultBaseValue>0</defaultBaseValue>
		<showIfModsLoaded><li>ludeon.rimworld.biotech</li></showIfModsLoaded>
		<parts>
		  <li MayRequire="Neronix17.TweaksGalore" Class="HautsF_TG.StatPart_MaxOutCommandRange">
			<setBaseTo>500</setBaseTo>
			<label>Tweaks Galore setting</label>
		  </li>
		</parts>
	</StatDef>
	<StatDef ParentName="MechanitorStatBase" MayRequire="Ludeon.RimWorld.Biotech">
		<defName>Hauts_MechEnergyUsage</defName>
		<label>mech energy usage offset</label>
		<description>An offset to the rate at which a mechanitor's mechanoids consume energy while operating.</description>
		<hideAtValue>0</hideAtValue>
		<defaultBaseValue>0</defaultBaseValue>
		<minValue>-1</minValue>
		<toStringStyle>PercentZero</toStringStyle>
		<showIfModsLoaded><li>ludeon.rimworld.biotech</li></showIfModsLoaded>
	</StatDef>
</Defs>