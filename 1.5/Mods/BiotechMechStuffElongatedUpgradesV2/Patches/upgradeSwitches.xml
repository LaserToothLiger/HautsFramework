<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name="MechUpgradePodBase_Light"]/comps</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="MechUpgradePodBase_Light"]/comps</xpath>
			<value>
				<li Class="CompPropertiesSwapBuilding_BMU">
					<buttonName>Mode: Armor Penetration</buttonName>
					<buttonDescription>Switch the current mode to one that assembles and installs an armor penetration and breach damage upgrade.</buttonDescription>
					<buildingSwap>Hauts_MechanoidUpgradePod_LightMedium_ArmorPen</buildingSwap>
					<uiIconPath>UI/Gizmos/BMU_SwitchMode_MeleeCombat</uiIconPath><!--remember to replace this with something else at some point-->
				</li>
				<li Class="CompPropertiesSwapBuilding_BMU">
					<buttonName>Mode: Stealth Tech</buttonName>
					<buttonDescription>Switch the current mode to one that assembles and installs a caravan stealth and filth reduction upgrade.</buttonDescription>
					<buildingSwap>Hauts_MechanoidUpgradePod_LightMedium_Stealth</buildingSwap>
					<uiIconPath>UI/Gizmos/BMU_SwitchMode_Speed</uiIconPath><!--remember to replace this with something else at some point-->
				</li>
			</value>
		</match>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name="MechUpgradePodBase_Heavy"]/comps</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="MechUpgradePodBase_Heavy"]/comps</xpath>
			<value>
				<li Class="CompPropertiesSwapBuilding_BMU">
					<buttonName>Mode: Armor Penetration</buttonName>
					<buttonDescription>Switch the current mode to one that assembles and installs an armor penetration and breach damage upgrade.</buttonDescription>
					<buildingSwap>Hauts_MechanoidUpgradePod_HeavyUltraHeavy_ArmorPen</buildingSwap>
					<uiIconPath>UI/Gizmos/BMU_SwitchMode_MeleeCombat</uiIconPath><!--remember to replace this with something else at some point-->
				</li>
				<li Class="CompPropertiesSwapBuilding_BMU">
					<buttonName>Mode: Stealth Tech</buttonName>
					<buttonDescription>Switch the current mode to one that assembles and installs a caravan stealth and filth reduction upgrade.</buttonDescription>
					<buildingSwap>Hauts_MechanoidUpgradePod_HeavyUltraHeavy_Stealth</buildingSwap>
					<uiIconPath>UI/Gizmos/BMU_SwitchMode_Speed</uiIconPath><!--remember to replace this with something else at some point-->
				</li>
			</value>
		</match>
	</Operation>
</Patch>