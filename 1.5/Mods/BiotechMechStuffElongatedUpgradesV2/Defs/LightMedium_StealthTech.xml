<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--Building-->
	<ThingDef ParentName="MechUpgradePodBase_Light">
		<defName>Hauts_MechanoidUpgradePod_LightMedium_Stealth</defName>
		<building>
			<subcoreScannerOutputDef>Wastepack</subcoreScannerOutputDef>
			<subcoreScannerStartEffect>SubcoreSoftscanner_Start</subcoreScannerStartEffect>
			<subcoreScannerWorking>SubcoreSoftscanner_Working</subcoreScannerWorking>
			<subcoreScannerComplete>SubcoreSoftscanner_Complete</subcoreScannerComplete>
			<subcoreScannerHediff>Hauts_MechBoost_Armor_LightMedium_Stealth</subcoreScannerHediff>
			<subcoreScannerTicks>60000</subcoreScannerTicks>
			<!--24 hours-->
			<ai_chillDestination>false</ai_chillDestination>
			<buildingTags>
				<li>Biotech</li>
			</buildingTags>
			<subcoreScannerFixedIngredients>
				<li>
					<filter>
						<thingDefs>
							<li>Plasteel</li>
						</thingDefs>
					</filter>
					<count>32</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>Cloth</li>
						</thingDefs>
					</filter>
					<count>80</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>ComponentSpacer</li>
						</thingDefs>
					</filter>
					<count>1</count>
				</li>
			</subcoreScannerFixedIngredients>
		</building>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<comps>
			<li Class="CompProperties_MechUpgraderExtraProps">
				<ForWeightClass>Light</ForWeightClass>
				<ForWeightClassSecondary>Medium</ForWeightClassSecondary>
				<WeightMultiplier>2</WeightMultiplier>
				<WeightMultiplierString>2</WeightMultiplierString>
				<!--affects stuff like the amount of wastepacks produced and....that's kinda it-->
				<ModeLabel>Stealth</ModeLabel>
			</li>
		</comps>
	</ThingDef>
	<!--Hediff-->
	<HediffDef>
		<defName>Hauts_MechBoost_Armor_LightMedium_Stealth</defName>
		<label>stealth upgrade</label>
		<description>A specialized upgrade that reduces both a mechanoidâ€™s filth production and the amount of visibility it contributes to a caravan.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(161,206,243)</defaultLabelColor>
		<stages>
			<li>
				<label>level 1</label>
				<minSeverity>1</minSeverity>
				<statFactors>
					<FilthRate>0.875</FilthRate>
					<Hauts_TrackSize>0.875</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.9</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 2</label>
				<minSeverity>2</minSeverity>
				<statFactors>
					<FilthRate>0.75</FilthRate>
					<Hauts_TrackSize>0.75</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.8</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 3</label>
				<minSeverity>3</minSeverity>
				<statFactors>
					<FilthRate>0.625</FilthRate>
					<Hauts_TrackSize>0.625</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.7</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 4</label>
				<minSeverity>4</minSeverity>
				<statFactors>
					<FilthRate>0.5</FilthRate>
					<Hauts_TrackSize>0.5</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.6</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 5</label>
				<minSeverity>5</minSeverity>
				<statFactors>
					<FilthRate>0.375</FilthRate>
					<Hauts_TrackSize>0.375</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.5</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 6</label>
				<minSeverity>6</minSeverity>
				<statFactors>
					<FilthRate>0.25</FilthRate>
					<Hauts_TrackSize>0.25</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.4</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 7</label>
				<minSeverity>7</minSeverity>
				<statFactors>
					<FilthRate>0.125</FilthRate>
					<Hauts_TrackSize>0.125</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.3</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
			<li>
				<label>level 8</label>
				<minSeverity>8</minSeverity>
				<statFactors>
					<FilthRate>0</FilthRate>
					<Hauts_TrackSize>0</Hauts_TrackSize>
					<Hauts_PersonalCaravanVisibilityFactor>0.2</Hauts_PersonalCaravanVisibilityFactor>
				</statFactors>
			</li>
		</stages>
		<initialSeverity>1</initialSeverity>
		<minSeverity>1</minSeverity>
		<maxSeverity>8</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeathAndSpawnItem_BMU">
				<itemToSpawn>Hauts_UpgradeChunk_Stealth</itemToSpawn>
			</li>
		</comps>
	</HediffDef>
	<!--Chunk-->
	<ThingDef ParentName="BMU_UpgradeChunkBase">
		<defName>Hauts_UpgradeChunk_Stealth</defName>
		<label>stealth mech upgrade slag</label>
		<description>An amalgamation of melted, smashed-up metals, broken-down components and inactive mechanites. While completely useless in its current form, the valuable metals within it can be separated and recovered with proper tools.</description>
		<graphicData>
			<texPath>Things/Items/BMU_UpgradeSlag</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Mass>14</Mass>
		</statBases>
		<soundDrop>ChunkSlag_Drop</soundDrop>
		<stackLimit>10</stackLimit>
		<thingCategories>
			<li>BMU_MechanoidUpgradeSlag</li>
		</thingCategories>
		<smeltable>true</smeltable>
		<smeltProducts>
			<Steel>27</Steel>
			<Plasteel>53</Plasteel>
			<!--Extra base resources from a broken-down advanced component: 32 steel, 10 plasteel and 3 gold, roughly 60-75% of the base cost-->
			<Gold>2</Gold>
			<Cloth>60</Cloth>
		</smeltProducts>
	</ThingDef>

</Defs>